#include <LiquidCrystal_I2C.h>

// -------------------------------------------------------------
// กำหนด object สำหรับจอ LCD I2C
// 0x27 = I2C address ของจอ
// 20 = จำนวนตัวอักษรต่อบรรทัด
// 4  = จำนวนบรรทัด
// -------------------------------------------------------------
LiquidCrystal_I2C lcd(0x27, 20, 4); // ตั้งค่าที่อยู่ LCD เป็น 0x27 สำหรับการแสดงผล 16 ตัวอักษรและ 2 บรรทัด

void setup()
{
    // เริ่มต้น LCD
    lcd.init();          

    // เปิดแสงแบ็คไลท์
    lcd.backlight();     

    // ---------------------------------------------------------
    // แสดงข้อความบรรทัดแรก
    // setCursor(col, row) -> กำหนดตำแหน่งคอลัมน์และแถว
    // col = 0–19, row = 0–3
    // ---------------------------------------------------------
    lcd.setCursor(3, 0);  // เริ่มพิมพ์จากคอลัมน์ 3 ของแถว 0
    lcd.print("Hello, world!"); 

    // แสดงข้อความบรรทัดที่สอง
    lcd.setCursor(2, 1);  // เริ่มพิมพ์จากคอลัมน์ 2 ของแถว 1
    lcd.print("SUMTECH!");
}

void loop()
{
    // วนลูปว่าง ๆ เพราะข้อความคงที่ ไม่ต้องอัปเดต
}
